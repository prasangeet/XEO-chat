<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SignInActivity"
    android:background="@color/primary">

    <LinearLayout
        android:id="@+id/logoContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center">
            <TextView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="XEO"
                android:textColor="@color/white"
                android:fontFamily="@font/anuratiregular"
                android:textSize="100sp"/>
            <RelativeLayout
                android:id="@+id/googlebutton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/logo"
                android:background="@drawable/roundedbtn_back"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:clickable="true">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_google_icon"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue with Google"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:padding="30dp"
            android:background="@drawable/black_25_top_round">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:backgroundTint="@color/white_60"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColor="@color/white"
                android:textColorHint="@color/white_60"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white_60"
                android:layout_marginTop="20dp"
                android:layout_below="@id/email"
                android:inputType="textPassword"
                android:hint="Password"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_60"/>
            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eye_open"
                android:layout_alignTop="@id/password"
                android:layout_alignEnd="@id/password"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"/>
            <RelativeLayout
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/password"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/second_all_round"
                android:clickable="true"
                android:alpha="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/continueBtn"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="@color/white_60"/>
                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up!"
                    android:textColor="@color/white"
                    android:clickable="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>